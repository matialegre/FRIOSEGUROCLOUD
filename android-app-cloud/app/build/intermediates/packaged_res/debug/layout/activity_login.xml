<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f172a"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_rift_logo"
        android:contentDescription="Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FrioSeguro ☁️"
        android:textColor="#60a5fa"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versión Cloud - Monitoreo por Internet"
        android:textColor="#8b5cf6"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:id="@+id/cardLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="24dp"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☁️ Conexión a la Nube"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Esta versión se conecta a Supabase para monitorear tus Reefers desde cualquier lugar con internet."
            android:textColor="#94a3b8"
            android:textSize="14sp" />

        <!-- Campo oculto para compatibilidad -->
        <EditText
            android:id="@+id/etServerIp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnAutoConnect"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#8b5cf6"
            android:text="☁️ CONECTAR A SUPABASE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Presiona el botón para conectar"
            android:textColor="#64748b"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="FrioSeguro Cloud © 2026"
        android:textColor="#334155"
        android:textSize="12sp" />

</LinearLayout>
</ScrollView>
