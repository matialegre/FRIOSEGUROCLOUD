<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="app_name">Alerta RIFT</string>
    <style name="DialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#3b82f6</item>
    </style>
    <style name="Theme.AlertaRift" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#3b82f6</item>
        <item name="colorPrimaryDark">#0f172a</item>
        <item name="colorAccent">#22d3ee</item>
        <item name="android:windowBackground">#0f172a</item>
        <item name="android:statusBarColor">#0f172a</item>
        <item name="android:navigationBarColor">#0f172a</item>
    </style>
    <style name="Theme.AlertaRift.Dialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">#1e293b</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorAccent">#3b82f6</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButton</item>
    </style>
    <style name="Theme.AlertaRift.Fullscreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">#dc2626</item>
        <item name="android:statusBarColor">#dc2626</item>
        <item name="android:navigationBarColor">#dc2626</item>
    </style>
</resources>