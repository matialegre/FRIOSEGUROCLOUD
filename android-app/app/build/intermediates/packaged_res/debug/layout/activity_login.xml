            android:textColor="#64748b"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnAutoConnect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#22c55e"
            android:text="ðŸ” BUSCAR RIFT AUTOMÃTICAMENTE"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#334155"
            android:text="CONECTAR MANUALMENTE"
            android:textColor="#94a3b8"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="#64748b"
            android:textSize="13sp"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Parametican Silver Â© 2024"
