<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f172a"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_rift_logo"
        android:contentDescription="Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FrioSeguro"
        android:textColor="#60a5fa"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistema de Monitoreo de Temperatura"
        android:textColor="#64748b"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:id="@+id/cardLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="24dp"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona el modo de conexiÃ³n"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Selector de modo LOCAL / INTERNET -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnModeLocal"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#3b82f6"
                android:text="ðŸ“¡ LOCAL"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnModeInternet"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:backgroundTint="#8b5cf6"
                android:alpha="0.5"
                android:text="ðŸŒ INTERNET"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="LOCAL: Misma red WiFi\nINTERNET: Desde cualquier lugar"
            android:textColor="#64748b"
            android:textSize="11sp"
            android:gravity="center" />

        <!-- ConfiguraciÃ³n LOCAL -->
        <LinearLayout
            android:id="@+id/layoutLocalConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/etServerIp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_input"
                android:hint="rift.local"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#475569"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ðŸ’¡ Usa reefer.local o la IP del dispositivo"
                android:textColor="#64748b"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAutoConnect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#22c55e"
            android:text="ðŸ” CONECTAR"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#334155"
            android:text="CONECTAR MANUALMENTE"
            android:textColor="#94a3b8"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Selecciona LOCAL o INTERNET"
            android:textColor="#64748b"
            android:textSize="13sp"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="FrioSeguro Â© 2026"
        android:textColor="#334155"
        android:textSize="12sp" />

</LinearLayout>
</ScrollView>
